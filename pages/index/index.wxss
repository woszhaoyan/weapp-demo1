.container{
  padding-top: 0px;
}

.search{
  width: 100%;
}

.selection{
  width: 100%;
  padding-top: 5px; 
  padding-bottom: 10px;
  text-align: center;
}

.selection1{
  width: 100%;
  padding-top: 5px; 
  padding-bottom: 10px;
  text-align: center;
  background-color: #eee;
}

.swiper-item-image{
  height: 200px;
  width:95%; 
  border-radius: 5px;
}


.header{
  display: flex;
  justify-content: center;
}

.new-text{
  padding-top: 10px;
  text-align: center;
  font: bold 20px helvetica, arial;
  font-family: LiSu;
  color: red;
  text-shadow: 0 0 4px white,
               0 -2px 4px #ff3,
               2px -5px 6px #fd3,
               -2px -8px 5px #f80,
               2px -12px 10px #f20;
  
}

.newcommodity{

  display: flex;
  flex-wrap:wrap;
  justify-content: left; 
  
}

.commodity-item{
  width: 46%;
  height: 300px;
  padding: 3px;
  margin: 2px;
  margin-top: 10px;
  display: flex;
  flex-flow: column;
  background-color: #fff;
  border-radius: 4px;
}

.commodity-item-image{
  width: 100%;
  height: 100%;
}

.commodity-item-model{
  text-align: center;
  font-size: 10px;
  color: #aaa;
}

.commodity-item-title{
  margin-top:3px; 
  text-align: center;
  font-size: 10px;
}

.commodity-info{
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 5px;
}

.price-info{
  color: red;
  font-size: 15px;

}

.sold-info{
  color: #bbd;
  font-size: 10px;
}

